{% extends 'base.html.twig' %}

{% block title %}Hello ConstructionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <ul>
    {% for construction in constructions  %}
        <li>{{ construction }} <a href="{{ url('app_construction_edit',{'id':construction.id}) }}">EDIT</a> <a href="{{ url('app_construction_delete',{'id':construction.id}) }}">DELETE</a></li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
