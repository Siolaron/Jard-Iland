{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | Personne{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>Ajouter une personne <a href="{{url('app_person_add')}}"><button type="button" class="btn btn-primary">Ajouter</button></a></p>
    <ul>
        {% for person in persons  %}
            <li>{{ person }} <a href="{{ url('app_person_edit',{'id':person.id}) }}"><button type="button" class="btn btn-warning">EDIT</button></a> <a href="{{ url('app_person_delete',{'id':person.id}) }}"><button type="button" class="btn btn-danger">DELETE</button></a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
